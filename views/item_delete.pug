extends layout

block content
  style.
    .item {
      border: 1px solid #ddd;
      padding: 10px;
      width: 250px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      position: relative;
      margin-bottom: 10px;
    }
    .item img {
      width: 100%;
      height: 150px;
      object-fit: cover;
      margin-bottom: 10px;
    }
    .item-name {
      font-weight: bold;
    }
    .item-description {
      margin-bottom: 10px;
    }
    .item-price {
      color: #0077cc;
    }
    .item-buttons {
      margin-top: 10px;
    }
    .item-button {
      margin-right: 5px;
      padding: 5px 10px;
      font-size: 14px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }
    .delete-button {
      background-color: #cc0000;
      color: white;
    }

  h1 #{category_item.category.name}
  .item
    img(src=category_item.imageUrl alt=category_item.name)
    .item-name= category_item.name
    .item-description= category_item.description
    .item-price= "$" + category_item.price
    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden', name='itemId', required='true', value=category_item._id)
      button.btn.btn-primary.item-button(type='submit') Delete
